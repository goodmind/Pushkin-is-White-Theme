{
  "$schema": "vscode://schemas/color-theme",
  "name": "Pushkin is Black",
  "colors": {
    /* Editor */
    "titleBar.activeBackground": "#18181A",
    "titleBar.activeForeground": "#ffffff90",
    "titleBar.inactiveForeground": "#ffffff90",
    "titleBar.inactiveBackground": "#18181A",
    // "titleBar.border": "#000000",
    "focusBorder": "#746D73",

    "editor.background": "#1C1C1C",
    "editor.foreground": "#bdc3c7",//"#F9F9F9",
    "editorLineNumber.foreground": "#75715E",
    "editorCursor.foreground": "#B6B6B6",
    "editor.selectionBackground": "#00000050",//"#ffffff50",
    "editor.lineHighlightBackground": "#00000040",
    // "editor.selectionHighlightBackground": "#362712",

    /* Workbench: activitybar */
    "activityBar.background": "#1A1A1A", //"#000000",
    "activityBar.foreground": "#bdc3c7",
    "activityBarBadge.background": "#bdc3c7",
    "activityBarBadge.foreground": "#000000",

    /* Workbench: sidebar */
    "sideBar.background": "#1A1A1A",
    "sideBar.foreground": "#ffffff50",
    // "sideBarTitle.foreground": "#ffffff",
    "sideBarSectionHeader.background": "#1A1A1A",
    // "sideBarSectionHeader.foreground": "#ffffff",

    "list.activeSelectionBackground": "#ffffff10",
    "list.inactiveSelectionBackground": "#ffffff10",
    "list.activeSelectionForeground": "#bdc3c7",
    "list.inactiveSelectionForeground": "#bdc3c7",
    "list.hoverBackground": "#1A1A1A",

    /* Tabs */
    // "tab.activeBackground": "#0B0B0B"
    "tab.activeForeground": "#ffffff",
    "tab.inactiveBackground": "#ffffff10", //"#000000D0",
    "tab.inactiveForeground": "#ffffffB0",

    "scrollbar.shadow": "#000000",

    // "editorGroupHeader.tabsBorder": "#000000",
    "tab.border": "#1C1C1C",
    "editorGroupHeader.tabsBackground": "#1A1A1A",

    /* Widget */
    "editorHoverWidget.background": "#1C1C1C",
    "editorWidget.border": "#18181A",

    /* Editor match brackets */
    "editorBracketMatch.background": "#ffffff00",
    "editorBracketMatch.border": "#ffffff90",

    // Workbench: Status Bar
    "statusBar.foreground": "#ffffff90",
    "statusBar.background": "#18181A",
    "statusBar.noFolderBackground": "#595959",
    "statusBar.debuggingBackground": "#595959"
  },

  "tokenColors": [
    /* Comment */
    {
      "name": "Comment",
      "scope": [
        "comment"
      ],
      "settings": {
        // "fontStyle": "italic",
        "foreground": "#746D73"
      }
    },
    /* Faded and bolded */
    {
      "name": "Keyword operator",
      "scope": [
        "variable.language",
        "keyword.control",
        "keyword.operator.expression",
        "keyword.operator.new",
        "storage.type",
        "punctuation.terminator",

        "punctuation.separator.comma", // BOLD?
        "punctuation.accessor", // BOLD?
        "keyword.other",

        "meta.function-call support.function"
      ],
      "settings": {
        "fontStyle": "bold",
        "foreground": "#797979"
      }
    },
    /* Constant */
    {
      "name": "Constant",
      "scope": [
        "constant.language"
      ],
      "settings": {
        "foreground": "#7f8c8d"
      }
    },
    /* String */
    {
      "name": "Type: String",
      "scope": [
        "string.quoted"
      ],
      "settings": {
        "foreground": "#c7254e" // "#E26A6A" // "#C0392B" // "#ff0068AA" // "#DCB777"
      }
    },
    /* Quote */
    {
      "name": "Quote",
      "scope": [
        "punctuation.definition.string"
      ],
      "settings": {
/*        "fontStyle": "bold",*/
        "foreground": "#E08283" // "#E87E04" // "#E87E04"
      }
    },
    /* Number */
    {
      "name": "Type: Number",
      "scope": [
        "constant"
      ],
      "settings": {
        "foreground": "#5C97BF" //"#d35400"
      }
    },
    /* Function name */
    {
      "name": "Function name",
      "scope": [
        "meta.function-call entity.name.function",
        "entity.name",
        "punctuation.separator",
        "punctuation.terminator",
        "punctuation.accessor",
        "punctuation.definition.block",
        "meta.brace",
        "punctuation.definition.parameters"
      ],
      "settings": {
        "foreground": "#797979" // "#3498DB" //"#67809F" //"#2C3E50" //"#34495e"
      }
    },
    /* Logic operator */
    {
      "name": "Logical operator",
      "scope": [
        "keyword.operator.logical",
        "keyword.operator.comparison"
      ],
      "settings": {
        "foreground": "#bdc3c7"
      }
    }
  ]
}

















